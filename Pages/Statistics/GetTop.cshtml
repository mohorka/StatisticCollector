@page "{handler?}"
@model StatisticCollector.Pages.Statistics.GetTopModel
@{
    ViewData["Title"] = "Get Top";
}

<form method="get">
    <div style="background-color:#ADAAAA" class="jumbotron">
        <h1 class="display-4 font-weight-lighter">Enter a language</h1>
        <p class="lead font-weight-normal">
            You will get a list of the most frequently used words in particular language.
        </p>

        <div class="input-group mb-3">
            <input spellcheck="true" type="text" class="input-group-text font-weight-normal" id="language" value="" style="background-color:#C9C5C5" placeholder="Input language" aria-label="Input language" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-secondary font-weight-normal" id="send" type="button">Send</button>
            </div>
        </div>
        <hr>
        <div class="font-weight-normal" style="background-color:transparent">
            <p class="lead font-weight-normal text-dark" id="result">
            </p>
        </div>
    </div>
</form>

@section scripts{
    <script>
    $(function () {
        $('#send').on('click', function () {
            console.log();
            $('#result').load('/Statistics/GetTop/TopPartial?language=' + document.getElementById("language").value);
            console.log();
        });
    });
    </script>
}
